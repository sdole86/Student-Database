@model IEnumerable<Exercise_4.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<h1>List of Students</h1>

<p>
    <a asp-action="Create" class="btn btn-dark">Create New</a>
</p>

<form asp-controller="Students" asp-action="Index" method="get">
    
        Search by <b>Last Name</b>: <input type="text" name="SearchString" />
        <input type="submit" value="Search" class="btn btn-dark"/>
        
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zip)
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zip)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StudentId" class="btn btn-dark">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StudentId" class="btn btn-dark">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StudentId" class="btn btn-dark">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-action="Create" class="btn btn-dark">Create New</a>
</p>

<form asp-controller="Students" asp-action="Index" method="get">
    
        Search by <b>Last Name</b>: <input type="text" name="SearchString" />
        <input type="submit" value="Search" class="btn btn-dark"/>
        
</form>
